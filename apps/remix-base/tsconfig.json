{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "./*.d.ts",
    "./app/**/*",
    "./eslintrc.cjs",
    "./vite.config.ts",
    "./postcss.config.cjs",
    "./tailwind.config.ts"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true
  }
}
